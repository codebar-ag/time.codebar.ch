{
  "extends": "@vue/tsconfig/tsconfig.json",
  "exclude": [
    "vendor/**/*"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "resources/js/types"
    ],
    "paths": {
      "@/*": ["./resources/js/*"],
      "@solidtime/ui": ["./resources/js/packages/ui/src/index.ts"]
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.vue",
    "resources/js/ziggy.d.ts",
    "extensions/Invoicing/resources/js/**/*.ts",
    "extensions/Invoicing/resources/js/**/*.d.ts",
    "extensions/Invoicing/resources/js/**/*.vue"
  ]
}
